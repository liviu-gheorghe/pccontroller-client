<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liviugheorghe.pcc_client">
    <application
        android:name="com.liviugheorghe.pcc_client.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.FileSharingActivity"
            android:label="File Sharing"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.OPEN_DOCUMENT" />
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity android:name="com.liviugheorghe.pcc_client.ui.WaitForPermissionActivity" />
        <activity android:name="com.liviugheorghe.pcc_client.ui.QrCodeScannerActivity" />
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.TouchpadActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />

        </activity>
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.LauncherActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.LinkSharingActivity"
            android:label="Link Sharing"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.MainControlInterfaceActivity"
            android:parentActivityName=".ui.MainActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.MainActivity" />
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.MainActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.liviugheorghe.pcc_client.backend.Connection" />
        <service android:name="com.liviugheorghe.pcc_client.backend.Client" />
        <service android:name="com.liviugheorghe.pcc_client.backend.FileConnection" />
    </application>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>