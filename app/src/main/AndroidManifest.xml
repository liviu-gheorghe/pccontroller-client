<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pccontroller">

    <application
        android:name="com.liviugheorghe.pcc_client.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.FileSharingActivity"
            android:label="PC Controller File Sharing"
            >
            <intent-filter>
                <action android:name="android.intent.action.OPEN_DOCUMENT" />
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity android:name="com.liviugheorghe.pcc_client.ui.WaitForPermissionActivity" />
        <activity android:name="com.liviugheorghe.pcc_client.ui.QrCodeScannerActivity" />
        <activity android:name="com.liviugheorghe.pcc_client.ui.TouchpadActivity" />
        <activity android:name="com.liviugheorghe.pcc_client.ui.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.LinkSharingActivity"
            android:label="Pc Controller Link Sharing">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity android:name="com.liviugheorghe.pcc_client.ui.MainControlInterfaceActivity" />
        <activity
            android:name="com.liviugheorghe.pcc_client.ui.MainActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.liviugheorghe.pcc_client.backend.Connection" />
        <service android:name="com.liviugheorghe.pcc_client.backend.Client" />
        <service android:name="com.liviugheorghe.pcc_client.backend.FileConnection" />
    </application>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>